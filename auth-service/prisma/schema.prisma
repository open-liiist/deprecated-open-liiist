generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("AUTH_DATABASE_URL")
}

model User {
    id           String         @id @default(cuid())
    email        String         @unique
    name         String        // Nome dell'utente, ora obbligatorio per la registrazione
    dateOfBirth  DateTime      // Data di nascita dell'utente
    supermarkets String[]       // Lista dei supermercati di cui l'utente Ã¨ socio
    passwordHash String
    createdAt    DateTime       @default(now())
    updatedAt    DateTime       @default(now())
    deletedAt    DateTime?
    refreshToken RefreshToken[]
    profile      Profile?
}

model Profile {
    id        String   @id @default(cuid())
    bio       String?
    image     String?
    budget    Float?
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    user      User     @relation(fields: [userId], references: [id])
    userId    String   @unique
}

model RefreshToken {
    id         String   @id @default(cuid())
    token      String
    userId     String
    user       User     @relation(fields: [userId], references: [id])
    expiryDate DateTime
}
